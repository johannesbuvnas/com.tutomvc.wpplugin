{
  "name": "tutomvc",
  "version": "3.2.0",
  "description": "The WordPress MVC Framework for developers.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johannesbuvnas/tutomvc"
  },
  "scripts": {
    "postinstall": "typings install",
    "clean:dist": "rm -r dist",
    "apigen": "./vendor/apigen/apigen/bin/apigen generate -s src/php -d api --template-theme bootstrap --title=\"Tuto MVC\" --tree",
    "build:dev": "webpack --config src/node/webpack.dev.js --progress --profile --colors --display-error-details --display-cached --bail",
    "build:prod": "webpack --config src/node/webpack.prod.js --progress --profile --colors --display-error-details --display-cached --bail",
    "build": "npm run clean:dist && npm run build:dev && npm run build:prod"
  },
  "devDependencies": {
    "typings": "^1.0.4",
    "webpack": "*",
    "webpack-merge": "0.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "uglify-js": "^2.7.0",
    "file-loader": "^0.9.0",
    "css-loader": "^0.23.1",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "script-loader": "^0.7.0",
    "source-map-loader": "0.1.5",
    "style-loader": "^0.13.1",
    "bootstrap": "^3.3.6",
    "bootstrap-select": "^1.10.0",
    "select2": "4.0.3"
  }
}