<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Tuto MVC API</title>
    <parser>
        <target>docs</target>
        <encoding>utf8</encoding>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="src/twig/phpdoc-template" />
        <!--<template name="responsive-twig" />-->
    </transformations>
    <files>
        <directory>src/php</directory>
    </files>
</phpdoc>